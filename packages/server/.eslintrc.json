{
  "parser": "babel-eslint",
  "extends": ["airbnb/base", "plugin:import/errors", "eslint:recommended"],
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "optionalDependencies": true
      }
    ],
    "import/extensions": [
      "error",
      "always",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "no-use-before-define": 0,
    "arrow-body-style": 0,
    "operator-linebreak": 0,
    "max-len": [
      "error",
      {
        "code": 150
      }
    ],
    "indent": 0,
    "implicit-arrow-linebreak": 0,
    "function-paren-newline": 0,
    "arrow-parens": 0,
    "import/prefer-default-export": 0,
    "import/no-cycle": 0,
    "no-unused-expressions": 0,
    "no-nested-ternary": 0,
    "object-curly-newline": 0,
    "comma-dangle": 0,
    "dot-notation": 0,
    "no-console": 0,
    "semi": 2
  },
  "globals": {
    "window": true,
    "localStorage": true,
    "document": true,
    "navigator": true
  },
  "plugins": ["json", "import"],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js"]
      }
    }
  }
}
